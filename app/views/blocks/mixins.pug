mixin renderMenu(items)
  ul.menu-list
    each item in items
      li.menu-item(class=item.children && item.children.length ? 'dropdown' : '')
          a.menu-link(href=item.link)= item.title
          if item.children && item.children.length
            +renderMenu(item.children)
          if item.mega
            .megas
                .megas-list.row
                  each megaItem in item.mega
                      div.megas-item.col
                          p.tt= megaItem.title
                          ul.menu-list.row
                              each menuItem in megaItem.items
                                  li.menu-item.col  
                                    a(href="").menu-link= menuItem 
