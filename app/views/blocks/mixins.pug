//- countdown
mixin CountDown(time,customClass)
    .cdw(data-time= time, class= customClass)
      .cdw-list 
          .cdw-item(style="display: none")
              .cdw-inner 
                  .number.date
          .cdw-item 
              .cdw-inner 
                  .number.hour
          span.txt :
          .cdw-item 
              .cdw-inner 
                  .number.minute
          span.txt :
          .cdw-item 
              .cdw-inner 
                  .number.second
