//- button
mixin Btn(text, type, classCustom, img, ani)
    if(!img=="")
      if(type == "button")
              button.btn(type="submit",class=classCustom)
                  span.txt
                    span.txt-inner #{text}
                    +img(img)
      else
          a.btn(href="",class=classCustom)
              span.txt
                span.txt-inner #{text} 
                +img(img) 
    else 
      if(!classCustom)
          if(type == "button")
              button.btn(type="submit",class=classCustom)
                  span.txt
                    span.txt-inner #{text}
                    +img("arrow.svg")
          else
              a.btn(href="",class=classCustom)
                  span.txt
                    span.txt-inner #{text} 
                    +img("arrow.svg")
      else 
          if(type == "button")
              button.btn(type="submit",class=classCustom)
                  span.txt #{text}
          else
              a.btn(href="", class=classCustom)
                  span.txt #{text}
//- page number
mixin PageNumber(classCustom) 
    ul.page-numbers(class=classCustom)
        li 
            a.prev.page-numbers(href="")
              i.fa-solid.fa-chevron-left
        li
            span.page-numbers.current   
                | 1
        li
            a.page-numbers(href="")   
                | 2
        li 
            span.page-numbers.dot 
                |...
        li
            a.page-numbers(href="")   
                | 10
        li 
            a.next.page-numbers(href="")
              i.fa-solid.fa-chevron-right
//- breadcrumb
mixin BreadCrumb(arr,classCustom)
  .breadcrumb(class=classCustom)
    .container
      .breadcrumb-wrapper 
        ul.breadcrumb-list
          li.breadcrumb-item(data-aos="fade-left")
            a.breadcrumb-link(href="")
              | Trang chủ
          each arrs in arr
            li.breadcrumb-item(data-aos="fade-left")
              a.breadcrumb-link(href="") #{arrs.txt}
